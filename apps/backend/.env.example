# Production Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=production
PORT=5000

# Database - Replace with your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/playbg?retryWrites=true&w=majority

# Cache - Replace with your Redis Cloud connection string
REDIS_URL=redis://USERNAME:PASSWORD@host:port

# Authentication - Generate a secure JWT secret
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRE=7d

# CORS
FRONTEND_URL=https://your-domain.com

# Logging
LOG_LEVEL=info

# Optional: Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100