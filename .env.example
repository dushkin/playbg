# PlayBG Environment Configuration Template
# Copy this file to .env.development and .env.production
# Replace placeholder values with actual configuration

NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/playbg-dev

# JWT Configuration - MUST use cryptographically secure secrets
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_SECURE_64_CHAR_HEX_STRING
JWT_EXPIRE=7d

# CORS and Frontend
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Development-specific settings
DEBUG_MODE=true
ENABLE_CORS=true

# Optional: Redis for caching (if available)
# REDIS_URL=redis://localhost:6379

# Security Notes:
# - JWT_SECRET must be at least 64 characters for security
# - Use different secrets for development and production
# - Never commit actual .env files to version control